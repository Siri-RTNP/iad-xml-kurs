<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE verwaltung SYSTEM "14-ns-externe-dtd.dtd" [
  <!-- Attributliste für den extra-Namensraum festlegen
    Attributwert = beliebige Zeichenfolge, aber durch #FIXED festgelegt
   -->
  <!ATTLIST daten xmlns:extra CDATA #FIXED "http://mit-anrede.com">

  <!-- Über den Namensraum "extra" kann nun das Attribut "anrede" dem Element "name" hinzugefügt werden -->
  <!ATTLIST name extra:anrede (Herr|Frau) #IMPLIED>
]>

<verwaltung xmlns="http://irgendeineURL.de">
  <daten>
    <name>Müller</name>
  </daten>

  <daten xmlns:extra="http://mit-anrede.com">
    <name extra:anrede="Herr">Meier</name>
  </daten>
</verwaltung>